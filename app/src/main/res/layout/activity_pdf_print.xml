<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context=".PdfPrintActivity" >
    <LinearLayout android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_control"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_getpdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/getpdf" />
        <Button
            android:id="@+id/btn_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/default_pdf" />
    </LinearLayout>
    <LinearLayout android:id="@+id/ll_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_printthis"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_pre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/previous_page"/>
        <TextView android:id="@+id/tv_showpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
             <Button android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/next_page"/>
    </LinearLayout>
        <Button
        android:id="@+id/btn_printthis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/print_this_page" 
        android:layout_above="@+id/btn_printpdf"/>
    <Button
        android:id="@+id/btn_printpdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/print_all_pdf_document" />

    <ImageView
        android:id="@+id/iv_showpdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_head"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>