<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEBF0"
    android:orientation="vertical"
    tools:context=".activity.CreditScoreActivity">

    <com.speedata.jinhualajidemo.view.TitleBarView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/user_msg_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="信用评分"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_z5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_score"
                android:drawableLeft="@mipmap/icon_5"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp"
                android:text="+5"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_z3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_score"
                android:drawableLeft="@mipmap/icon_3"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp"
                android:text="+3"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_f5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_score"
                android:drawableLeft="@mipmap/icon_fu5"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp"
                android:text="-5"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_f3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_score"
                android:drawableLeft="@mipmap/icon_fu3"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp"
                android:text="-3"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_score"
                android:drawableLeft="@mipmap/icon_0"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp"
                android:text="0"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_3"
                android:gravity="left|center_vertical"
                android:text="+3"
                android:visibility="invisible" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>