<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEBF0"
    android:orientation="vertical"
    tools:context=".activity.LaClassifyActivity">

    <com.speedata.jinhualajidemo.view.TitleBarView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/user_msg_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="投放的垃圾分类"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_chuyu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:background="@drawable/btn_laclassily"
                android:drawableTop="@mipmap/icon_garbage1"
                android:gravity="center"
                android:padding="10dp"
                android:text="厨余垃圾"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tx_huishou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_laclassily"
                android:drawableTop="@mipmap/icon_garbage2"
                android:gravity="center"
                android:padding="10dp"
                android:text="可回收垃圾"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_youhai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:layout_weight="1"
                android:background="@drawable/btn_laclassily"
                android:drawableTop="@mipmap/icon_garbage3"
                android:gravity="center"
                android:padding="10dp"
                android:text="有害垃圾"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tx_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_laclassily"
                android:drawableTop="@mipmap/icon_garbage4"
                android:gravity="center"
                android:padding="10dp"
                android:text="其它垃圾"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>